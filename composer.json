{
  "name": "xuey490/database",
  "description": "FssPHP Database operation library,Integrate ThinkPHP and Illuminate Database to achieve seamless switching between the two. (namespace Framework\\Database)",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Framework\\Database\\": "src/"
    }
  },
  "require": {
    "php": "^8.2",
	"illuminate/database": "^12.0",
	"illuminate/events": "^12.0",
    "topthink/think-orm": "^4.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.6",
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^2.0"
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "analyse": "phpstan analyse src --level 7"
  }
}
